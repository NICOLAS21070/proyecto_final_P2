<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.RegistrarIncidenciaController"
            style="-fx-background-color: linear-gradient(to bottom, #ffffff, #eef2f3);">

    <!-- TÍTULO -->
    <top>
        <Label text="REGISTRAR INCIDENCIA DE ENVÍO"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 20 0 20 0;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- CUERPO -->
    <center>
        <VBox spacing="18">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <!-- ID -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="ID Envío:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="txtIdEnvio"
                           prefWidth="230"
                           promptText="Ingrese el ID del envío"
                           style="-fx-background-color: #ffffff;
                                  -fx-border-color: #bdc3c7;
                                  -fx-border-radius: 6;
                                  -fx-background-radius: 6;"/>
                <Button text="Buscar"
                        onAction="#buscarEnvio"
                        style="-fx-background-color: #3498db;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 6;"/>
            </HBox>

            <!-- Tipo -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="Tipo de incidencia:"
                       style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <ChoiceBox fx:id="cbTipoIncidencia"
                           style="-fx-background-color: #ffffff;
                                  -fx-border-color: #bdc3c7;
                                  -fx-border-radius: 6;
                                  -fx-background-radius: 6;"
                           prefWidth="220"/>
            </HBox>

            <!-- Descripción -->
            <Label text="Descripción:"
                   style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>

            <TextArea fx:id="txtDescripcion"
                      prefHeight="130"
                      wrapText="true"
                      style="-fx-background-color: #ffffff;
                             -fx-border-color: #bdc3c7;
                             -fx-border-radius: 8;
                             -fx-background-radius: 8;"/>
        </VBox>
    </center>

    <!-- BOTONES -->
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" bottom="25"/>
            </padding>

            <Button text="Registrar incidencia"
                    onAction="#registrarIncidencia"
                    style="-fx-background-color: #e74c3c;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 8 20 8 20;
                           -fx-background-radius: 8;"/>

            <Button text="Volver"
                    onAction="#volver"
                    style="-fx-background-color: #95a5a6;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 8 20 8 20;
                           -fx-background-radius: 8;"/>
        </HBox>
    </bottom>

</BorderPane>
