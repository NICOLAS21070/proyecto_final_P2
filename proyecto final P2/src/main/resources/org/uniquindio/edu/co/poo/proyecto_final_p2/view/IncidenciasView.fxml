<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.IncidenciasController"
      alignment="CENTER"
      spacing="15"
      padding="25"
      style="-fx-background-color: #FFF3E0;">

    <Label text="⚠️ Reportar Incidencia"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="ID del Envío:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIdEnvio" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="220"/>

        <Label text="Tipo de Incidencia:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboTipo" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Retraso"/>
                    <String fx:value="Paquete Dañado"/>
                    <String fx:value="Dirección Incorrecta"/>
                    <String fx:value="Otro"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Descripción:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtDescripcion"
                  GridPane.rowIndex="2"
                  GridPane.columnIndex="1"
                  prefRowCount="4"
                  wrapText="true"
                  promptText="Describe brevemente lo sucedido..."/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnRegistrar" text="Registrar Incidencia"
                style="-fx-background-color: #FB8C00; -fx-text-fill: white;"/>
        <Button fx:id="btnVolver" text="Volver"
                style="-fx-background-color: #BDBDBD;"/>
    </HBox>
</VBox>
