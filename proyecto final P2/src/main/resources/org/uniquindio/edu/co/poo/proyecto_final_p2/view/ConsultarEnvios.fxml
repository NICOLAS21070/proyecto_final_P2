<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.ConsultarEnviosController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #F4F6F9;">

    <VBox spacing="25" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- TÍTULO -->
        <Label text="Consultar Envíos por Repartidor"
               style="-fx-font-size: 28px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #2C3E50;"/>

        <!-- TABLA REPARTIDORES -->
        <VBox spacing="12">
            <Label text="Repartidores"
                   style="-fx-font-size: 20px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #34495E;"/>

            <TableView fx:id="tablaRepartidores" prefHeight="190"
                       style="-fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-background-color: white;
                              -fx-border-color: #D0D3D4;
                              -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="300"/>
                    <TableColumn fx:id="colDocumento" text="Documento" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>

        <!-- TABLA ENVIOS -->
        <VBox spacing="12">
            <Label text="Envíos Asignados"
                   style="-fx-font-size: 20px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #34495E;"/>

            <TableView fx:id="tablaEnvios" prefHeight="260"
                       style="-fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-background-color: white;
                              -fx-border-color: #D0D3D4;
                              -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="colIdEnvio" text="ID Envío" prefWidth="140"/>
                    <TableColumn fx:id="colDestino" text="Destino" prefWidth="220"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="160"/>
                    <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="220"/>
                    <TableColumn fx:id="colCosto" text="Costo" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>

        <!-- BOTÓN VOLVER -->
        <Button fx:id="btnVolver"
                text="Volver"
                onAction="#volverMenu"
                style="-fx-font-size: 16px;
                       -fx-padding: 10 25;
                       -fx-background-color: #2980B9;
                       -fx-text-fill: white;
                       -fx-background-radius: 10;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 6, 0, 0, 2);"/>

    </VBox>

</AnchorPane>
