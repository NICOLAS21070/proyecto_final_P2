<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="645.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.AsignarEnviosController"
            style="
                -fx-background-color: linear-gradient(to bottom, #E3F2FD, #BBDEFB);
            ">

    <!-- TOP -->
    <top>
        <Label text="ASIGNAR ENVÍOS A REPARTIDORES"
               BorderPane.alignment="CENTER"
               style="
                    -fx-font-size: 26px;
                    -fx-font-weight: bold;
                    -fx-text-fill: #0D47A1;
                    -fx-padding: 20;
               "/>
    </top>

    <!-- CENTER -->
    <center>
        <HBox prefHeight="471.0" prefWidth="1197.0"
              spacing="20"
              style="
                    -fx-padding: 20;
              ">

            <!-- Tabla de Envíos -->
            <VBox spacing="10" HBox.hgrow="ALWAYS"
                  style="
                        -fx-background-color: white;
                        -fx-background-radius: 15;
                        -fx-padding: 20;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.25, 0, 2);
                  ">

                <Label text="Envíos pendientes"
                       style="
                            -fx-font-size: 18px;
                            -fx-font-weight: bold;
                            -fx-text-fill: #1976D2;
                       "/>

                <TableView fx:id="tablaEnvios"
                           prefWidth="450"
                           style="
                                -fx-background-radius: 10;
                                -fx-border-radius: 10;
                                -fx-border-color: #90CAF9;
                           ">
                    <columns>
                        <TableColumn fx:id="colIdEnvio" prefWidth="80" text="ID"/>
                        <TableColumn fx:id="colRemitente" prefWidth="150" text="Remitente"/>
                        <TableColumn fx:id="colDestino" prefWidth="227" text="Destino"/>
                        <TableColumn fx:id="colEstadoEnvio" prefWidth="152" text="Estado"/>
                    </columns>
                </TableView>

            </VBox>

            <!-- Tabla de Repartidores -->
            <VBox spacing="10" HBox.hgrow="ALWAYS"
                  style="
                        -fx-background-color: white;
                        -fx-background-radius: 15;
                        -fx-padding: 20;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.25, 0, 2);
                  ">

                <Label text="Repartidores disponibles"
                       style="
                            -fx-font-size: 18px;
                            -fx-font-weight: bold;
                            -fx-text-fill: #1976D2;
                       "/>

                <TableView fx:id="tablaRepartidores"
                           prefWidth="450"
                           style="
                                -fx-background-radius: 10;
                                -fx-border-radius: 10;
                                -fx-border-color: #90CAF9;
                           ">
                    <columns>
                        <TableColumn fx:id="colNombreRep" prefWidth="150" text="Nombre"/>
                        <TableColumn fx:id="colTelefono" prefWidth="120" text="Teléfono"/>
                        <TableColumn fx:id="colZona" prefWidth="194" text="Zona"/>
                        <TableColumn fx:id="colEstadoRep" prefWidth="145" text="Estado"/>
                    </columns>
                </TableView>

            </VBox>

        </HBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER"
              spacing="15"
              style="
                    -fx-padding: 20;
              ">

            <!-- Botón Asignar -->
            <Button fx:id="btnAsignar"
                    text="Asignar envío"
                    onAction="#asignarEnvio"
                    style="
                        -fx-background-color: linear-gradient(to bottom right, #2196F3, #1976D2);
                        -fx-text-fill: white;
                        -fx-font-size: 18px;
                        -fx-font-weight: bold;
                        -fx-background-radius: 10;
                        -fx-padding: 12 20;
                        -fx-cursor: hand;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.20), 8, 0.3, 0, 2);
                    "/>

            <!-- Botón Volver -->
            <Button fx:id="btnVolver"
                    text="Volver"
                    onAction="#volver"
                    style="
                        -fx-background-color: linear-gradient(to right, #616161, #424242);
                        -fx-text-fill: white;
                        -fx-font-size: 18px;
                        -fx-font-weight: bold;
                        -fx-background-radius: 10;
                        -fx-padding: 12 24;
                        -fx-cursor: hand;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.20), 8, 0.3, 0, 2);
                    "/>

        </HBox>
    </bottom>

</BorderPane>
