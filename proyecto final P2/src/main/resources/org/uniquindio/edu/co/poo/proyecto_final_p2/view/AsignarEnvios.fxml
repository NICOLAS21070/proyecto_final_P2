<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="645.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.AsignarEnviosController"
            id="rootAsignarEnvios">

    <!-- TOP -->
    <top>
        <Label id="lblTituloAsignar"
               text="ASIGNAR ENVÍOS A REPARTIDORES"
               BorderPane.alignment="CENTER"
               styleClass="titulo-asignar"/>
    </top>

    <!-- CENTER -->
    <center>
        <HBox id="contenedorTablas"
              prefHeight="471.0" prefWidth="1197.0"
              spacing="20" styleClass="contenedor-tablas">

            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <children>

                <!-- Tabla de Envíos -->
                <VBox id="seccionEnvios" spacing="10" HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="lblEnviosPendientes" text="Envíos pendientes" styleClass="subtitulo"/>

                        <TableView fx:id="tablaEnvios"
                                   id="tablaEnvios"
                                   prefWidth="450"
                                   styleClass="tabla-envios">

                            <columns>
                                <TableColumn fx:id="colIdEnvio" id="colIdEnvio" prefWidth="80" text="ID"/>
                                <TableColumn fx:id="colRemitente" id="colRemitente" prefWidth="150" text="Remitente"/>
                                <TableColumn fx:id="colDestino" id="colDestino" prefWidth="227" text="Destino"/>
                                <TableColumn fx:id="colEstadoEnvio" id="colEstadoEnvio" prefWidth="152" text="Estado"/>
                            </columns>

                        </TableView>
                    </children>
                </VBox>

                <!-- Tabla de Repartidores -->
                <VBox id="seccionRepartidores" spacing="10" HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="lblRepartidores" text="Repartidores disponibles" styleClass="subtitulo"/>

                        <TableView fx:id="tablaRepartidores"
                                   id="tablaRepartidores"
                                   prefWidth="450"
                                   styleClass="tabla-repartidores">

                            <columns>
                                <TableColumn fx:id="colNombreRep" id="colNombreRep" prefWidth="150" text="Nombre"/>
                                <TableColumn fx:id="colTelefono" id="colTelefono" prefWidth="120" text="Teléfono"/>
                                <TableColumn fx:id="colZona" id="colZona" prefWidth="194" text="Zona"/>
                                <TableColumn fx:id="colEstadoRep" id="colEstadoRep" prefWidth="145" text="Estado"/>
                            </columns>

                        </TableView>
                    </children>
                </VBox>

            </children>

        </HBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox id="contenedorBotones"
              alignment="CENTER"
              spacing="15"
              styleClass="contenedor-botones">

            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <children>
                <Button fx:id="btnAsignar"
                        id="btnAsignar"
                        text="Asignar envío"
                        onAction="#asignarEnvio"
                        styleClass="btn-asignar"/>

                <Button fx:id="btnVolver"
                        id="btnVolver"
                        text="Volver"
                        onAction="#volver"
                        styleClass="btn-volver"/>
            </children>

        </HBox>
    </bottom>

</BorderPane>
