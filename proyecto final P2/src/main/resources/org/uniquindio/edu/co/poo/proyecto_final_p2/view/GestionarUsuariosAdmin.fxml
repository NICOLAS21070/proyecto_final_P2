<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.GestionarUsuariosAdminController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #F5F5F5;">

    <!-- Barra superior -->
    <top>
        <ToolBar style="-fx-background-color: #1976D2;">
            <Label text="ðŸ‘¥ GestiÃ³n de Usuarios"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="â¬… Volver"
                    onAction="#volverAlPanelAdmin"
                    style="-fx-background-color: white; -fx-text-fill: #1976D2;"/>
        </ToolBar>
    </top>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="20" alignment="CENTER" prefWidth="800">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Formulario para agregar/editar usuarios -->
            <TitledPane text="Datos del Usuario" expanded="true" prefWidth="700">
                <VBox spacing="10">
                    <GridPane hgap="15" vgap="10" alignment="CENTER_LEFT">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                            <ColumnConstraints halignment="LEFT" prefWidth="250"/>
                        </columnConstraints>

                        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNombre" promptText="Nombre completo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Correo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCorreo" promptText="usuario@ejemplo.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Rol:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

                        <ChoiceBox fx:id="cbRol" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="ContraseÃ±a:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="txtContrasena" promptText="********" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>

                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Agregar" onAction="#agregarUsuario"
                                style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="Actualizar" onAction="#actualizarUsuario"
                                style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="Eliminar" onAction="#eliminarUsuario"
                                style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- Tabla de usuarios registrados -->
            <TitledPane text="Lista de Usuarios" expanded="true" prefWidth="700">
                <VBox spacing="10">
                    <TableView fx:id="tablaUsuarios" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                            <TableColumn fx:id="colCorreo" text="Correo" prefWidth="180"/>
                            <TableColumn fx:id="colRol" text="Rol" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </TitledPane>
        </VBox>
    </center>
</BorderPane>