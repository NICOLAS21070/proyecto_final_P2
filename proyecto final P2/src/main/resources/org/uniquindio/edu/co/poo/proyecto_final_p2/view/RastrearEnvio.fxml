<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.RastrearEnviosViewController"
            prefHeight="500" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom, #ffffff, #eef2f3); -fx-padding: 20;">

    <children>

        <!-- Título -->
        <Label text="Rastrear Envío"
               layoutX="200" layoutY="20"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <!-- ID -->
        <Label text="ID del Envío:"
               layoutX="80" layoutY="100"
               style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <TextField fx:id="txtIdEnvio"
                   layoutX="220" layoutY="95"
                   prefWidth="260"
                   style="-fx-background-color: #ffffff;
                          -fx-border-color: #bdc3c7;
                          -fx-border-radius: 6;
                          -fx-background-radius: 6;"/>

        <Button fx:id="btnBuscar"
                text="Buscar"
                layoutX="490" layoutY="95"
                onAction="#buscarEnvio"
                style="-fx-background-color: #3498db;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 6;"/>

        <!-- Estado -->
        <Label text="Estado actual:"
               layoutX="80" layoutY="160"
               style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <TextField fx:id="txtEstado"
                   layoutX="220" layoutY="155"
                   prefWidth="260"
                   editable="false"
                   style="-fx-background-color: #ecf0f1;
                          -fx-border-color: #bdc3c7;
                          -fx-border-radius: 6;
                          -fx-background-radius: 6;"/>

        <!-- Ubicación -->
        <Label text="Ubicación actual:"
               layoutX="80" layoutY="210"
               style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <TextField fx:id="txtUbicacion"
                   layoutX="220" layoutY="205"
                   prefWidth="260"
                   editable="false"
                   style="-fx-background-color: #ecf0f1;
                          -fx-border-color: #bdc3c7;
                          -fx-border-radius: 6;
                          -fx-background-radius: 6;"/>

        <!-- Incidencias -->
        <Label text="Incidencias:"
               layoutX="80" layoutY="260"
               style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <TextArea fx:id="txtIncidencias"
                  layoutX="220" layoutY="255"
                  prefWidth="260"
                  prefHeight="130"
                  editable="false"
                  wrapText="true"
                  style="-fx-background-color: #ecf0f1;
                         -fx-border-color: #bdc3c7;
                         -fx-border-radius: 8;
                         -fx-background-radius: 8;"/>

        <Button fx:id="btnIncidencias"
                text="Ver Incidencias"
                layoutX="80" layoutY="310"
                prefWidth="120"
                onAction="#verIncidencias"
                style="-fx-background-color: #e67e22;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 8;"/>

        <!-- Volver -->
        <Button fx:id="btnVolver"
                text="Volver"
                layoutX="250" layoutY="430"
                prefWidth="120"
                onAction="#volver"
                style="-fx-background-color: #95a5a6;
                       -fx-font-weight: bold;
                       -fx-background-radius: 8;"/>

    </children>
</AnchorPane>
