<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.RastrearEnviosViewController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f4f6f7; -fx-padding: 20;">

    <children>
        <Label text="Rastrear Envío"
               layoutX="220" layoutY="20"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <Label text="ID del Envío:"
               layoutX="100" layoutY="100"/>
        <TextField fx:id="txtIdEnvio"
                   layoutX="220" layoutY="95"
                   prefWidth="250"/>

        <Button fx:id="btnBuscar"
                text="Buscar"
                layoutX="480" layoutY="95"
                onAction="#buscarEnvio"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Label text="Estado actual:"
               layoutX="100" layoutY="160"/>
        <TextField fx:id="txtEstado"
                   layoutX="220" layoutY="155"
                   prefWidth="250"
                   editable="false"/>

        <Label text="Ubicación actual:"
               layoutX="100" layoutY="210"/>
        <TextField fx:id="txtUbicacion"
                   layoutX="220" layoutY="205"
                   prefWidth="250"
                   editable="false"/>

        <Button fx:id="btnVolver"
                text="Volver"
                layoutX="250" layoutY="300"
                prefWidth="100"
                onAction="#volver"
                style="-fx-background-color: #95a5a6; -fx-font-weight: bold;"/>

    </children>
</AnchorPane>
