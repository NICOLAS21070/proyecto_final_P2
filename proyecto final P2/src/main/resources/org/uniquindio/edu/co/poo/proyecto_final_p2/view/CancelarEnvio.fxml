<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.CancelarEnvioController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);">

    <children>

        <!-- CONTENEDOR PRINCIPAL -->
        <VBox spacing="15" alignment="TOP_CENTER"
              layoutX="90" layoutY="40"
              prefWidth="420"
              style="-fx-background-color: white;
                     -fx-padding: 25;
                     -fx-background-radius: 15;
                     -fx-border-radius: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 12, 0, 0, 2);">

            <!-- TÍTULO -->
            <Label text="Cancelar Envío"
                   style="-fx-font-size: 22px;
                          -fx-font-weight: bold;
                          -fx-text-fill:#0d47a1;
                          -fx-padding: 0 0 10 0;"/>

            <!-- ID DEL ENVÍO -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ID del envío:"
                       style="-fx-font-size: 14px;"/>
                <TextField fx:id="txtIdEnvio"
                           promptText="Ingrese ID del envío"
                           style="-fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6;"/>
            </HBox>

            <!-- MOTIVO -->
            <Label text="Motivo de cancelación:"
                   style="-fx-font-size: 14px; -fx-padding: 5 0 0 0;"/>

            <TextArea fx:id="txtMotivo"
                      prefHeight="80"
                      wrapText="true"
                      promptText="Describa el motivo..."
                      style="-fx-background-radius: 10;
                             -fx-border-radius: 10;
                             -fx-padding: 8;"/>

            <!-- BOTONES -->
            <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">

                <Button fx:id="btnCancelarEnvio"
                        text="Cancelar Envío"
                        onAction="#cancelarEnvio"
                        prefWidth="140"
                        style="-fx-background-color:#d32f2f;
                               -fx-text-fill:white;
                               -fx-font-weight:bold;
                               -fx-background-radius:10;
                               -fx-padding:8 10;"/>

                <Button fx:id="btnVolver"
                        text="Volver"
                        prefWidth="90"
                        onAction="#volver"
                        style="-fx-background-color:#90a4ae;
                               -fx-text-fill:white;
                               -fx-font-weight:bold;
                               -fx-background-radius:10;
                               -fx-padding:8 10;"/>

            </HBox>

        </VBox>

    </children>
</AnchorPane>
