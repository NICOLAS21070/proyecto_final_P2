<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.CancelarEnvioController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f9f9f9; -fx-padding: 20;">

    <children>
        <Label text="Cancelar Envío"
               layoutX="220" layoutY="20"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Label text="ID del envío:" layoutX="100" layoutY="100"/>
        <TextField fx:id="txtIdEnvio"
                   layoutX="220" layoutY="95"
                   prefWidth="250"/>

        <Label text="Motivo de cancelación:" layoutX="100" layoutY="150"/>
        <TextArea fx:id="txtMotivo"
                  layoutX="220" layoutY="145"
                  prefWidth="250" prefHeight="80"
                  wrapText="true"/>

        <Button fx:id="btnCancelarEnvio"
                text="Cancelar Envío"
                layoutX="220" layoutY="260"
                prefWidth="150"
                onAction="#cancelarEnvio"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Button fx:id="btnVolver"
                text="Volver"
                layoutX="400" layoutY="260"
                prefWidth="80"
                onAction="#volver"
                style="-fx-background-color: #bdc3c7; -fx-font-weight: bold;"/>

    </children>
</AnchorPane>
