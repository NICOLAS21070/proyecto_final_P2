<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.ModificarEnvioController"
            prefHeight="450" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom right, #E3F2FD, #BBDEFB);">

    <VBox alignment="CENTER"
          spacing="18"
          AnchorPane.topAnchor="20"
          AnchorPane.leftAnchor="40"
          AnchorPane.rightAnchor="40"
          style="-fx-background-color: white;
                 -fx-background-radius: 18;
                 -fx-padding: 25 30;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 12, 0, 0, 3);">

        <!-- Título -->
        <Label text="✏️ Modificar Envío"
               style="-fx-font-size: 22px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #0D47A1;" />

        <!-- Buscar envío -->
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="txtIdEnvio"
                       promptText="Ingrese ID del envío"
                       prefWidth="220"
                       style="-fx-background-color: #f5f5f5;
                              -fx-background-radius: 8;
                              -fx-padding: 6;" />

            <Button text="Buscar"
                    onAction="#buscarEnvio"
                    style="-fx-background-color: #1976D2;
                           -fx-background-radius: 10;
                           -fx-text-fill: white;
                           -fx-padding: 6 15;
                           -fx-font-weight: bold;" />
        </HBox>

        <!-- Formulario -->
        <GridPane hgap="15" vgap="12">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150" />
                <ColumnConstraints halignment="LEFT" prefWidth="250" />
            </columnConstraints>

            <Label text="Remitente:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="txtRemitente"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-background-color: #f5f5f5;
                              -fx-background-radius: 8;
                              -fx-padding: 6;" />

            <Label text="Destino:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="txtDestino"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"
                       style="-fx-background-color: #f5f5f5;
                              -fx-background-radius: 8;
                              -fx-padding: 6;" />

            <Label text="Dirección Destino:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="txtDireccionDestino"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"
                       style="-fx-background-color: #f5f5f5;
                              -fx-background-radius: 8;
                              -fx-padding: 6;" />

            <Label text="Peso (kg):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="txtPeso"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"
                       style="-fx-background-color: #f5f5f5;
                              -fx-background-radius: 8;
                              -fx-padding: 6;" />

            <Label text="Tipo:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <ChoiceBox fx:id="cbTipo"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"
                       style="-fx-background-color: #f5f5f5;
                              -fx-background-radius: 8;
                              -fx-padding: 6;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Documento"/>
                        <String fx:value="Paquete"/>
                        <String fx:value="Caja"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
        </GridPane>

        <!-- Botones -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Guardar Cambios"
                    onAction="#guardarCambios"
                    style="-fx-background-color: #388E3C;
                           -fx-background-radius: 10;
                           -fx-text-fill: white;
                           -fx-padding: 8 18;
                           -fx-font-weight: bold;" />

            <Button text="Volver"
                    onAction="#volver"
                    style="-fx-background-color: #1976D2;
                           -fx-background-radius: 10;
                           -fx-text-fill: white;
                           -fx-padding: 8 18;
                           -fx-font-weight: bold;" />
        </HBox>

        <Label fx:id="lblMensaje"
               style="-fx-text-fill: #2E7D32;
                      -fx-font-weight: bold;
                      -fx-font-size: 14px;" />
    </VBox>
</AnchorPane>
