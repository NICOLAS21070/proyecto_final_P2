<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.ModificarEnvioController"
            prefHeight="450.0" prefWidth="600.0"
            style="-fx-background-color: #F4F4F4;">

    <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="✏️ Modificar Envío" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <!-- Buscar envío -->
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="txtIdEnvio" promptText="Ingrese ID del envío" prefWidth="200"/>
            <Button text="Buscar" onAction="#buscarEnvio" style="-fx-background-color: #1976D2; -fx-text-fill: white;"/>
        </HBox>

        <!-- Formulario -->
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints halignment="LEFT" prefWidth="250"/>
            </columnConstraints>

            <Label text="Remitente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtRemitente" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Destino:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDestino" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Dirección Destino:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDireccionDestino" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Peso (kg):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPeso" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Tipo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="cbTipo" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Documento"/>
                        <String fx:value="Paquete"/>
                        <String fx:value="Caja"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
        </GridPane>

        <!-- Botones -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Guardar Cambios" onAction="#guardarCambios" style="-fx-background-color: #388E3C; -fx-text-fill: white;"/>
            <Button text="Volver" onAction="#volver" style="-fx-background-color: #0078D7; -fx-text-fill: white;"/>
        </HBox>

        <Label fx:id="lblMensaje" style="-fx-text-fill: green; -fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>
