<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.ConsultarPagosController"
            prefWidth="700" prefHeight="450"
            style="-fx-background-color: #F3F4F6;">

    <children>

        <!-- BOTÓN VOLVER ARRIBA A LA IZQUIERDA -->
        <Button text="⟵ Volver"
                onAction="#volverMenu"
                layoutX="20" layoutY="20"
                style="-fx-background-color: #2C3E50;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-padding: 6 12;
                       -fx-background-radius: 6;
                       -fx-cursor: hand;" />

        <VBox spacing="12" alignment="CENTER"
              AnchorPane.topAnchor="60"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20"
              AnchorPane.bottomAnchor="20">

            <Label text="Historial de Pagos"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

            <TableView fx:id="tablaPagos" prefHeight="330"
                       style="-fx-background-radius: 8; -fx-border-radius: 8;">

                <columns>
                    <TableColumn fx:id="colIdEnvio" text="ID Envío" prefWidth="100"/>
                    <TableColumn fx:id="colCliente" text="Cliente" prefWidth="150"/>
                    <TableColumn fx:id="colDestino" text="Destino" prefWidth="150"/>
                    <TableColumn fx:id="colMonto" text="Monto" prefWidth="120"/>
                    <TableColumn fx:id="colEstadoPago" text="Estado Pago" prefWidth="120"/>
                </columns>

            </TableView>

        </VBox>

    </children>

</AnchorPane>
