    <!-- BOTONES -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="btnActualizar" text="Actualizar Datos"
                style="-fx-background-color: #7b1fa2;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 8;
                       -fx-padding: 6 18 6 18;"/>

        <Button fx:id="btnVolver" text="Volver al MenÃº"
