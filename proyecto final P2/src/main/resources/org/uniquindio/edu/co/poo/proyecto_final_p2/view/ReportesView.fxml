<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.ReportesController"
      alignment="CENTER"
      spacing="18"
      padding="25"
      style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f3e5f5);">

    <!-- TÃTULO -->
