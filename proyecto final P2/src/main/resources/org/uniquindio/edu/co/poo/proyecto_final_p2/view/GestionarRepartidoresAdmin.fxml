<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.GestionarRepartidoresAdminController"
            style="-fx-background-color: #F5F5F5;">

    <!-- TÍTULO -->
    <top>
        <HBox alignment="CENTER"
              style="-fx-padding: 18; -fx-background-color: #1976D2;">
            <children>
                <Label text="Gestión de Repartidores"
                       style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </top>

    <!-- TABLA -->
    <center>
        <TableView fx:id="tablaRepartidores"
                   prefHeight="380"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="110"/>
                <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="130"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                <TableColumn fx:id="colDocumento" text="Documento" prefWidth="150"/>
                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="150"/>
                <TableColumn fx:id="colZona" text="Zona" prefWidth="150"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <!-- FORMULARIO -->
    <bottom>
        <VBox alignment="CENTER" spacing="12" style="-fx-padding: 20;">
            <children>

                <!-- FILA DE CAMPOS -->
                <HBox spacing="12" alignment="CENTER">
                    <children>
                        <TextField fx:id="txtUsuario" prefWidth="150" promptText="Usuario"/>
                        <PasswordField fx:id="txtContrasena" prefWidth="150" promptText="Contraseña"/>
                        <TextField fx:id="txtNombreReal" prefWidth="150" promptText="Nombre real"/>
                        <TextField fx:id="txtZona" prefWidth="150" promptText="Zona de cobertura"/>
                        <TextField fx:id="txtTelefono" prefWidth="150" promptText="Teléfono"/>
                        <TextField fx:id="txtDocumento" prefWidth="150" promptText="Documento"/>
                    </children>
                </HBox>

                <!-- ESTADO -->
                <HBox alignment="CENTER">
                    <children>
                        <ComboBox fx:id="cbEstado" prefWidth="180" promptText="Estado"/>
                    </children>
                </HBox>

                <!-- BOTONES -->
                <HBox alignment="CENTER" spacing="14">
                    <children>
                        <Button text="Agregar"
                                onAction="#agregarRepartidor"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 18;"/>

                        <Button text="Actualizar"
                                onAction="#actualizarRepartidor"
                                style="-fx-background-color: #FFC107; -fx-text-fill: black; -fx-background-radius: 6; -fx-padding: 8 18;"/>

                        <Button text="Eliminar"
                                onAction="#eliminarRepartidor"
                                style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 18;"/>

                        <Button text="Volver"
                                onAction="#volver"
                                style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 18;"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </bottom>

</BorderPane>
