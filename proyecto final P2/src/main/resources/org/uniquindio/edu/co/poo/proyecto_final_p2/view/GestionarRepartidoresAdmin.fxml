<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.GestionarRepartidoresAdminController">

    <!-- TÍTULO -->
    <top>
        <HBox alignment="CENTER">
           <children>
               <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 15;" text="Gestión de Repartidores" />
           </children>
        </HBox>
    </top>

    <!-- TABLA -->
    <center>
        <TableView fx:id="tablaRepartidores" prefHeight="400" prefWidth="998.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="108.0" text="ID" />
                <TableColumn fx:id="colUsuario" prefWidth="132.0" text="Usuario" />
                <TableColumn fx:id="colNombre" prefWidth="139.0" text="Nombre" />
                <TableColumn fx:id="colDocumento" prefWidth="144.0" text="Documento" />
                <TableColumn fx:id="colTelefono" prefWidth="166.0" text="Teléfono" />
                <TableColumn fx:id="colZona" prefWidth="166.0" text="Zona" />
                <TableColumn fx:id="colEstado" prefWidth="139.0" text="Estado" />
            </columns>
        </TableView>
    </center>

    <!-- FORMULARIO COMPLETO ABAJO -->
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 15;">
           <children>
   
               <HBox spacing="10">
      <children>
                      <TextField fx:id="txtUsuario" prefWidth="150" promptText="Usuario" />
                      <PasswordField fx:id="txtContrasena" prefWidth="150" promptText="Contraseña" />
                      <TextField fx:id="txtNombreReal" prefWidth="150" promptText="Nombre real" />
                      <TextField fx:id="txtZona" prefWidth="150" promptText="Zona de cobertura" />
                      <TextField fx:id="txtTelefono" prefWidth="150" promptText="Teléfono" />
                      <TextField fx:id="txtDocumento" prefWidth="150" promptText="Documento" />
      </children>
               </HBox>
   
               <HBox spacing="10">
      <children>
                      <ComboBox fx:id="cbEstado" prefWidth="150" />
      </children>
               </HBox>
   
               <HBox alignment="CENTER" spacing="12">
      <children>
                      <Button onAction="#agregarRepartidor" text="Agregar" />
                      <Button onAction="#actualizarRepartidor" text="Actualizar" />
                      <Button onAction="#eliminarRepartidor" text="Eliminar" />
                      <Button onAction="#volver" text="Volver" />
      </children>
               </HBox>
           </children>

        </VBox>
    </bottom>

</BorderPane>
