<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.LoginController"
            prefWidth="500" prefHeight="400"
            id="rootPane">

    <children>
        <VBox id="mainContainer" alignment="CENTER" spacing="15.0" layoutX="70" layoutY="50" prefWidth="360">
            <padding>
                <Insets top="40" right="30" bottom="40" left="30"/>
            </padding>

            <!-- Título -->
            <Label id="lblTitulo"
                   text="Sistema Logístico - Login"
                   styleClass="titulo-principal"/>

            <Separator id="lineSeparator" prefWidth="200"/>

            <!-- Tipo de usuario -->
            <Label id="lblTipoUsuario" text="Tipo de usuario:" styleClass="label-form"/>
            <ChoiceBox fx:id="cbTipoUsuario" prefWidth="200" styleClass="campo"/>

            <!-- Usuario -->
            <Label id="lblUsuario" text="Usuario:" styleClass="label-form"/>
            <TextField fx:id="txtUsuario" promptText="Ingrese su usuario" prefWidth="250" styleClass="campo"/>

            <!-- Contraseña -->
            <Label id="lblPassword" text="Contraseña:" styleClass="label-form"/>
            <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" prefWidth="250" styleClass="campo"/>

            <!-- Botón de ingreso -->
            <Button fx:id="btnLogin" text="Ingresar"
                    prefWidth="150"
                    styleClass="boton-login"
                    onAction="#ingresar"/>

            <!-- Mensaje -->
            <Label fx:id="lblMensaje" textFill="red" wrapText="true" prefWidth="250"
                   styleClass="mensaje-error"/>

        </VBox>
    </children>
</AnchorPane>
