<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.edu.co.poo.proyecto_final_p2.ViewController.LoginController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom right, #E3F2FD, #BBDEFB);">

    <children>

        <VBox alignment="CENTER"
              spacing="18"
              layoutX="80" layoutY="40"
              prefWidth="340"
              style="-fx-background-color: white;
                     -fx-background-radius: 18;
                     -fx-padding: 35 30;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 12, 0, 0, 3);">

            <!-- T칤tulo -->
            <Label text="游댏 Sistema Log칤stico"
                   style="-fx-font-size: 22px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #0D47A1;" />

            <Label text="Inicio de Sesi칩n"
                   style="-fx-font-size: 16px;
                          -fx-text-fill: #1565C0;" />

            <Separator prefWidth="240" />

            <!-- Tipo de usuario -->
            <Label text="Tipo de usuario:"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #333;" />

            <ChoiceBox fx:id="cbTipoUsuario"
                       prefWidth="220"
                       style="-fx-background-radius: 8;
                              -fx-background-color: #f5f5f5;
                              -fx-padding: 5;" />

            <!-- Usuario -->
            <Label text="Usuario:"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #333;" />

            <TextField fx:id="txtUsuario"
                       promptText="Ingrese su usuario"
                       prefWidth="230"
                       style="-fx-background-color: #f5f5f5;
                              -fx-background-radius: 8;
                              -fx-padding: 6;" />

            <!-- Contrase침a -->
            <Label text="Contrase침a:"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #333;" />

            <PasswordField fx:id="txtPassword"
                           promptText="Ingrese su contrase침a"
                           prefWidth="230"
                           style="-fx-background-color: #f5f5f5;
                                  -fx-background-radius: 8;
                                  -fx-padding: 6;" />

            <!-- Bot칩n de ingreso -->
            <Button fx:id="btnLogin"
                    text="Ingresar"
                    prefWidth="160"
                    onAction="#ingresar"
                    style="-fx-background-color: #1976D2;
                           -fx-background-radius: 10;
                           -fx-text-fill: white;
                           -fx-padding: 8 16;
                           -fx-font-weight: bold;" />

            <!-- 游댠 Bot칩n Registrarse agregado 游댠 -->
            <Button fx:id="btnRegistrar"
                    text="Registrarse"
                    prefWidth="160"
                    visible="false"
                    onAction="#registrarNuevoCliente"
                    style="-fx-background-color: #43A047;
                           -fx-background-radius: 10;
                           -fx-text-fill: white;
                           -fx-padding: 8 16;
                           -fx-font-weight: bold;" />

            <!-- Mensaje -->
            <Label fx:id="lblMensaje"
                   textFill="red"
                   wrapText="true"
                   prefWidth="250"
                   style="-fx-font-size: 13px;" />

        </VBox>
    </children>
</AnchorPane>
